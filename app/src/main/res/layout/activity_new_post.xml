<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainForum.NewPost.NewPost">

    <FrameLayout
        android:id="@+id/NewPostContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/post_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/post_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundColor"
        app:itemIconTint="@menu/bottom_navigation_selected"
        app:itemTextColor="@menu/bottom_navigation_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/new_post_bottom_nav_menu"
        tools:layout_editor_absoluteX="206dp" />

</androidx.constraintlayout.widget.ConstraintLayout>