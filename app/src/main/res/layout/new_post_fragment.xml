<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="NewPostViewModel"
            type="com.example.seniorproject.viewModels.NewPostFragmentViewModel"></variable>

    </data>

    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainForum.NewPostFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/username_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />

            <EditText
                android:id="@+id/new_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:text="@={NewPostViewModel.titlePost}"
                android:inputType="text" />

            <EditText
                android:id="@+id/new_post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Text"
                android:text="@={NewPostViewModel.textPost}"
                android:inputType="text" />

            <Button
                android:id="@+id/new_post_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_btn"
                android:text="Add Post"
                android:onClick="@{() -> NewPostViewModel.savePostToDatabase()}"
                android:textColor="@color/white" />

        </LinearLayout>

    </FrameLayout>
</layout>
