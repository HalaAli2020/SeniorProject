<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="NewPostViewModel"
            type="com.example.seniorproject.viewModels.NewPostFragmentViewModel"></variable>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context=".MainForum.NewPostFragment"
        android:layout_marginBottom="?attr/actionBarSize">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <Spinner
               android:id="@+id/spinner2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:entries="@array/class_list"
               tools:setOnItemSelectedListener="@{NewPostViewModel.clicksListener}"/>


            <EditText

                android:id="@+id/new_post_title"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="top|left"
                android:hint="Title"
                android:inputType="textMultiLine"
                android:maxLength="150"
                android:singleLine="true"
                android:text="@={NewPostViewModel.titlePost}" />

            <EditText
                android:id="@+id/new_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".75"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Text"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:text="@={NewPostViewModel.textPost}" />

           <Button
               android:id="@+id/new_post_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:background="@drawable/rounded_btn"
               android:onClick="@{() -> NewPostViewModel.savePostToDatabase()}"
               android:text="Add Post"
               android:textColor="@color/white" />

       </LinearLayout>

    </FrameLayout>
</layout>
