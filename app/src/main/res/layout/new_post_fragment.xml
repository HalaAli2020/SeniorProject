<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="NewPostViewModel"
            type="com.example.seniorproject.viewModels.NewPostFragmentViewModel"></variable>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainForum.NewPostFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/new_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:gravity="top|left"
                android:hint="Title"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:singleLine="true"
                android:inputType="textMultiLine"
                android:text="@={NewPostViewModel.titlePost}" />

            <EditText
                android:id="@+id/new_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:ems="10"
                android:maxLength="500"
                android:hint="Text"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:text="@={NewPostViewModel.textPost}" />

            <Button
                android:id="@+id/new_post_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_btn"
                android:onClick="@{() -> NewPostViewModel.savePostToDatabase()}"
                android:text="Add Post"
                android:textColor="@color/white" />

        </LinearLayout>

    </FrameLayout>
</layout>
